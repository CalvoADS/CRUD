<?php
$servername = "localhost";
$username = "root";
$password = "";
$dbname = "crud";

$conn = new mysqli($servername, $username, $password, $dbname);

if ($conn->connect_error) {
    die("Falha na conexão: " . $conn->connect_error);
}

if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $nome = htmlspecialchars($_POST['nome']);
    $cpf = htmlspecialchars($_POST['cpf']);
    $idade = htmlspecialchars($_POST['idade']);
    $sexo = htmlspecialchars($_POST['sexo']);
    $datan = htmlspecialchars($_POST['datan']);
    $datao = htmlspecialchars($_POST['datao']);
    $tel = htmlspecialchars($_POST['tel']);
    $relatório = isset($_POST['relatório']) ? htmlspecialchars($_POST['relatório']) : '';
    $enviar = isset($_POST['enviar']) ? htmlspecialchars($_POST['enviar']) : '';

    $sql = "INSERT INTO usuarios (nome, cpf, idade, sexo, datan, datao, tel, relatório) VALUES (?, ?, ?, ?, ?, ?, ?, ?)";

    $stmt = $conn->prepare($sql);
    $stmt->bind_param("ssisssss", $nome, $cpf, $idade, $sexo, $datan, $datao, $tel, $relatório);

    if ($stmt->execute()) {
        echo "Dados inseridos com sucesso!";
    } else {
        echo "Erro: " . $stmt->error;
    }
    $stmt->close();
}
$sql = "SELECT * FROM usuarios";
$result = $conn->query($sql);
?>

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Lista de Usuários</title>
</head>
<body>

<h2>Usuários</h2>
<table border="1">
    <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>CPF</th>
        <th>Idade</th>
        <th>Sexo</th>
        <th>Data de Nascimento</th>
        <th>Data de Outro</th>
        <th>Telefone</th>
        <th>Relatório</th>
        <th>Ações</th>
    </tr>
    <?php
    if ($result->num_rows > 0) {
        while($row = $result->fetch_assoc()) {
            echo "<tr>
                <td>{$row['id']}</td>
                <td>{$row['nome']}</td>
                <td>{$row['cpf']}</td>
                <td>{$row['idade']}</td>
                <td>{$row['sexo']}</td>
                <td>{$row['datan']}</td>
                <td>{$row['datao']}</td>
                <td>{$row['tel']}</td>
                <td>{$row['relatório']}</td>
                <td>
                    <a href='editar.php?id={$row['id']}'>Editar</a> |
                    <a href='deletar.php?id={$row['id']}' onclick=\"return confirm('Tem certeza que deseja excluir?')\">Excluir</a>
                </td>
            </tr>";
        }
    } else {
        echo "<tr><td colspan='10'>Nenhum usuário encontrado</td></tr>";
    }
    
    ?>
</table>
<p><a href="crud.html">Voltar ao Formulário</a></p>
</body>
</html>

    

